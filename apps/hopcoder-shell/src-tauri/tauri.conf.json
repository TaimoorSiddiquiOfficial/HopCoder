{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "HopCoder",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.hoptrendy.hopcoder",
      "active": true,
      "targets": "all",
      "icon": [
        "icons/icon.ico"
      ]
      
    },
    "windows": [
      {
        "title": "HopCoder",
        "width": 1200,
        "height": 800,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "allowlist": {
      "all": true
    },
    "security": {
      "csp": null
    }
  }
}
